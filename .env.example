# General settings

# Server URL
HOST_URL=http://localhost:8000

# Client URL (Eg. Reactjs)
APP_URL=http://localhost:3000

# System flag to indicate if use authentication mechanisms (Eg. token authentication)
# For development environment it is recommended to set to false
ENABLE_AUTH=false

# True if the server is hosted using AWS elastic beanstalk
USE_AWS_EB=false


# Db settings

DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432


# Email settings

SMTP_EMAIL=noreply@datagrid.mx
SMTP_PASSWORD=
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465


# S3 settings
# Use the same credentials as EB CLI
# Bucket is created automatically, use any name (only lowercase)

USE_AWS_S3=false
AWS_S3_KEY=
AWS_S3_SECRET=
AWS_S3_BUCKET_NAME=seedbucket


# For docker development

USE_DOCKER=false
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1]
# Uncomment for docker dev
# DB_HOST=db

# docker-compose.yml variables

POSTGRES_DB=django_db
POSTGRES_USER=django_db
POSTGRES_PASSWORD=
DATABASE=postgres